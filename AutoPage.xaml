<Page x:Class="PW10_DB.AutoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PW10_DB"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutoPage">

    <Grid>
        <StackPanel>
            <Label FontSize="18" HorizontalAlignment="Center">Авторизация</Label>
            <GroupBox Header="Введите логин">
                <TextBox Name="TbLoginAvto" Text="Admin" />
            </GroupBox>
            <GroupBox Header="Введите пароль">
                <PasswordBox Name="TbPasAvto" Password="Admin123!"/>
            </GroupBox>
            <Button Click="Button_Click">Авторизация</Button>
        </StackPanel>
    </Grid>
</Page>
