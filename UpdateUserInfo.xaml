<Window x:Class="PW10_DB.UpdateUserInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW10_DB"
        mc:Ignorable="d"
        Title="UpdateUserInfo" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <GroupBox Header="Имя" Height="50" Width="200" Margin="10">
                <TextBox Name="TBUpdateName"></TextBox>
            </GroupBox>
            <GroupBox Header="Фамилия" Height="50" Width="200" Margin="10">
                <TextBox Name="TBUpdateSurname"></TextBox>
            </GroupBox>
            <Button Name="UpdateInfo" Click="UpdateInfo_Click"  Height="30" Width="200" Margin="10">Обновить данные</Button>
        </StackPanel>
    </Grid>
</Window>
