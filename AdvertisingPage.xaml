<Page x:Class="PW10_DB.AdvertisingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PW10_DB"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdvertisingPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
            <Image Name="LogoImage" Width="200" Height="150" VerticalAlignment="Top" Margin="300,10" Source="Resources\logotip.png"/>
            <TextBlock HorizontalAlignment="Center" Name="TBHoSe" FontSize="32" >HOME SERVICES</TextBlock>
            <TextBlock HorizontalAlignment="Center" FontSize="18" Margin="10" >Регистрируйся и пользуйся!</TextBlock>
            <Button Name="BtnReg" Click="BtnReg_Click" Width="200" Height="50" FontWeight="Bold">Регистрация</Button>
        </StackPanel>
    </Grid>
</Page>
